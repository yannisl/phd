    image/.store~in          = \image@cx,
    texti/.store~in          = \texti@cx,
    textii/.store~in         = \textii@cx,
}

\cxset{offsety = 0pt,
       image   = hine02,
       texti   = \lorem,
       textii  = \lorem }    
\cxset
  {
    steward/.style = {
    offsety/.store~in        = \soffsety,
    image/.store~in          = \image@cx,
    texti/.store~in          = \texti@cx,
    textii/.store~in         = \textii@cx,
