% \begin{macro}{\footnoterule}
%   \changes{v2.3a}{1995/07/08}{\cs{@width} verwendet}
%   \changes{v2.8q}{2002/02/06}{\cs{raggedbottom}-Verbesserung
%     eingefügt}
