  {
    \cs_if_exist:cTF {int_to_cardinal_aux_#1:n}
        { \cs:w int_to_cardinal_aux_#1:n\cs_end:{#2} }
        {  
          \msg_error:nnnn { phd-counters } { unknown-language } {#1} {} 
          \cs:w int_to_cardinal_aux_en:n\cs_end:{#2} 
