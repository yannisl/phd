%
%    \begin{macrocode}
\DeclareDocumentCommand\newCounter { o m } 
  {
    \phd_create_new_counter:n {#2}
      \IfNoValueF {#1}
        {
          \int_if_exist:cT { \counter_resets_prefix:#1 } 
            { \phd_add_to_reset:nn {#1} {#2} } 
        }    
    \phd_make_auxiliary_functions: {#2}
  }
